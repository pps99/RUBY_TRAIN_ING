<div class="form">
  <h1>Login_Form</h1>
  <%= form_with url: handle_login_path, local: "true" do |form| %>
    <div class="input">
      <%= form.text_field :attr, name: "email", id: "email", placeholder: "Enter your email" %>
    </div>
    <div class="input">
      <%= form.password_field :attr, name: "password", id: "password", placeholder: "Enter your password" %>
    </div>
    <div class="button">
      <%= form.submit :login %>
    </div>
    <h2 class="err"><%= @error %></h2>
  <% end %>
</div>
