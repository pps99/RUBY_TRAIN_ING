<div class="editform">
<%= form_for @post do |f| %>
<div>
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>
<div>
  <%= f.label :description %>
  <%= f.text_field :description %>
</div>
<div>
  <%= f.label :status %>
  <%= f.text_field :status %>
</div>
<div>
  <%= f.submit %>
</div>
<% end %>
</div>