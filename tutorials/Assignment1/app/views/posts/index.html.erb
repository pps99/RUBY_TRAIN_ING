<h1>Posts Data</h1>
<div class="createbtn">
<%=link_to "Create", new_post_path %>
</div>
<table>
  <thead>
    <th>title</th>
    <th>description</th>
    <th>status</th>
    <th>options</th>
  </thead>
  <% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.description %></td>
    <td><%= post.status %></td>
    <td>
      <%= link_to "Edit", edit_post_path(post) %>
      <%= link_to "Delete", post, method: :delete, data: { confirm: "Are you sure you want to delete this user?"} %>
    </td>
  </tr>
  <% end %>
</table>

