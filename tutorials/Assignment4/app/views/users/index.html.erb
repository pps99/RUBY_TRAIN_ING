<h1>Users Data</h1>
<div class="createbtn">
<%=link_to "Create", new_user_path %>
</div>
<table>
  <thead>
    <th>Name</th>
    <th>Email</th>
    <th>Address</th>
    <th>Phone number</th>
    <th>Operations</th>
  </thead>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.address %></td>
    <td><%= user.phone_number%></td>
    <td>
      <%= link_to "Edit", edit_user_path(user) %>
      <%= link_to "Delete", user, method: :delete, data: { confirm: "Are you sure you want to delete this user?"} %>
    </td>
  </tr>
  <% end %>
</table>
